{
  "name": "pattern-lab-base-theme",
  "version": "0.0.0",
  "description": "Pattern Lab Base Theme",
  "author": {
    "name": "Evan Lovely",
    "url": "https://github.com/EvanLovely"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:drupal-pattern-lab/pattern-lab-base-theme.git"
  },
  "keywords": [
    "pattern-lab",
    "prototyping"
  ],
  "scripts": {
    "update": "npm update && cd pattern-lab && composer update",
    "new": "yo ./scripts/new-component/index.js",
    "postinstall": "find node_modules/ -name \"*.info\" -type f -delete && cd pattern-lab && composer install --no-interaction"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.24.0",
    "gulp": "gulpjs/gulp#4.0",
    "rc": "^1.2.0",
    "stylelint-scss": "^1.4.3"
  },
  "devDependencies": {
    "lodash.includes": "^4.1.3",
    "yeoman-generator": "^0.23.3",
    "yo": "^1.8.3"
  }
}
